<div class="col-md-12">

    <h2>Roles</h2>
    <br>

    <table class="table table-bordered table-condensed">
      <tbody>
        <tr>
          <th class="hidden-xs">Id</th>
          <th>Name</th>
          <th class="hidden-xs">Permissions</th>
          <th class="hidden-xs"></th>
        </tr>

        <% @roles.each do |role| %>
          <tr>
            <td><%= role.id %></td>
            <td>
              <%= role.name %>
            </td>
            <td><%= link_to 'Edit', edit_role_path(role) %></td>
            <td><%= link_to 'Delete', role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

  <a class="btn btn-default pull-right"  href="<%= new_role_path %>">
    <span class="glyphicon glyphicon-plus"></span>
  </a>

</div>



