<% a = current_user.roles.map {|r| r.permissions.map(&:mdl_name)}.flatten %>
<% if current_user.roles.map(&:name).include?("super_admin") %>
	<% a = Role::MODELS_LIST.map(&:to_s) %>
<% end %>
<ul class="nav nav-pills nav-stacked">
	<% if a.include?("account") %><li class="<% if current_page?(:accounts) %>active<% end %>"><%= link_to "Accounts", accounts_path %></li><% end %>
	<% if a.include?("order") %><li class="<% if current_page?(:orders) %>active<% end %>"><%= link_to "Orders", orders_path %></li><% end %>
	<% if a.include?("SKIP") %><li class="<% if current_page?(:invoices) %>active<% end %>"><%= link_to "Invoices", invoices_path %></li><% end %>
	<% if a.include?("item") %><li class="<% if current_page?(:items) %>active<% end %>"><%= link_to "Items", items_path %></li><% end %>
	<% if a.include?("vendor") %><li class="<% if current_page?(:vendors) %>active<% end %>"><%= link_to "Vendors", vendors_path %></li><% end %>
	<% if a.include?("brand") %><li class="<% if current_page?(:brands) %>active<% end %>"><%= link_to "Brands", brands_path %></li><% end %>
	<% if a.include?("category") %><li class="<% if current_page?(:categories) %>active<% end %>"><%= link_to "Categories", categories_path %></li><% end %>
	<% if a.include?("user") %><li class="<% if current_page?(:users) %>active<% end %>"><%= link_to "Users", users_path %></li><% end %>
	<% if a.include?("group") %><li class="<% if current_page?(:groups) %>active<% end %>"><%= link_to "Groups", groups_path %></li><% end %>
	<% if a.include?("setting") %>
		<li>
			<a href="#settings_menu" data-toggle="collapse">Settings <i class="fa fa-caret-down"></i></a>
			<ul id="settings_menu" class="sub-menu list-group collapse">
				<li class="<% if current_page?(:settings) %>active<% end %>"><%= link_to "General Settings", settings_path %></li>
			</ul>
		</li>
	<% end %>
	<% if a.include?("role") %><li class="<% if current_page?(:roles) %>active<% end %>"><%= link_to "Roles", roles_path %></li><% end %>
	<% if a.include?("payment") %><li class="<% if current_page?(:payments) %>active<% end %>"><%= link_to "Payments", payments_path %></li><% end %>
