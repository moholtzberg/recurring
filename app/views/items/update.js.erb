<% if flash[:error] %>
  $(".modal-content").html("<%= j render :template => 'items/edit.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $("#items").replaceWith("<%= j render :template => 'items/index.html', :format => 'html', :locals => {:items => @items} %>")
<% end %>