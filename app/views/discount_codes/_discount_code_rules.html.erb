<table class="table table-bordered table-condensed table-striped">
	
	<tr>
		<td colspan="3"><%= link_to "Add Discount Code Rule", new_discount_code_rule_path(:discount_code_id => discount_code.id), :class => "btn btn-primary btn-block btn-xs", :remote => true %>
	</tr>
	
	<tr>
		<th>Quantity</th>
		<th>Amount</th>
		<th>Requirable</th>
	</tr>

	<% discount_code.rules.each do |rule| %>
		<tr>
			<td><%= rule.quantity %></td>
			<td><%= rule.amount %></td>
			<td><%= rule.requirable.try(:name) %></td>
		</tr>
	<% end %>

</table>