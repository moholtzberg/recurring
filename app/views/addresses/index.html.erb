<% content_for :app_location do %>Admin / Addresses / Index<% end %>
<div id="addresss" class="col-md-12">
	
	<table class="table table-bordered table-condensed">
		
		<tr>
			<td colspan="11">
				<form id="searchBox" accept-charset="UTF-8" action="/admin/addresses" method="get" role="search">
					<input type="text" class="form-control" id="term" name="term" placeholder="Enter address name" value="<%= params[:term] %>">
				</form>
			</td>
		</tr>
		
		<tr>
			<th class="hidden-xs"><%= sortable "id" %></th>
			<th class="hidden-xs"><%= sortable "name" %></th>
			<th><%= sortable "address_1" %></th>
			<th><%= sortable "address_2" %></th>
			<th><%= sortable "city" %></th>
			<th class="hidden-xs"><%= sortable "state" %></th>
			<th><%= sortable "zip" %></th>
			<th class="hidden-xs"><%= sortable "phone" %></th>
			<th class="hidden-xs"><%= sortable "fax" %></th>
			<th class="hidden-xs"><%= sortable "main" %></th>
			<th>&nbsp;</th>
		</tr>

		<% @addresses.each do |a| %>
			<tr>
				<td class="hidden-xs"><%= a.id %></td>
				<td class="hidden-xs"><%= a.name %></td>
				<td><%= a.address_1 %></td>
				<td><%= a.address_2 %></td>
				<td><%= a.city %></td>
				<td class="hidden-xs"><%= a.state %></td>
				<td><%= a.zip %></td>
				<td class="hidden-xs"><%= a.phone %></td>
				<td class="hidden-xs"><%= a.fax %></td>
				<td class="hidden-xs"><%= a.main %></td>
				<td class="text-center">
					<div class="dropdown">
						<button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
							<li><%= link_to("View", address_path(a.id))  %></li>
							<li><%= link_to("Edit", edit_address_path(a.id, term: params[:term]), :remote => true)  %></li>
							<li><%= link_to("Destroy", address_path(a.id, term: params[:term]), :method => :delete, :remote => true)  %></li>
						</ul>
					</div>
				</td>
			</tr>
		<% end %>

	</table>
		
	<%= will_paginate @addresses, renderer: BootstrapPagination::Rails %>
	
	<%= link_to new_address_path(term: params[:term]), :class => "btn btn-default pull-right", :remote => true do %><span class="glyphicon glyphicon-plus"></span><% end %>
	
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div>