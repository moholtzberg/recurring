<% content_for :app_location do %>Admin / Discount Code Effects / Index<% end %>
<div id="discount_code_effects" class="col-md-12">

	<table class="table table-bordered table-condensed table-responsive">
		
		<tr>
			<td colspan="8">
				<form id="searchBox" accept-charset="UTF-8" action="/admin/discount_code_effects" method="get" role="search">
					<input type="text" class="form-control" id="term" name="term" placeholder="Search for code" value="<%= params[:term] %>">
				</form>
			</td>
			
		</tr>
		
		<tr>
			<th class="hidden-xs">ID</th>
			<th>Name</th>
			<th>Discount Code</th>
			<th>Amount</th>
			<th>Percent</th>
			<th>Shipping</th>
			<th>Quantity</th>
			<th class="hidden-xs">Item</th>
			<th class="hidden-xs">Appliable</th>
			<th>&nbsp;</th>
		</tr>
		
		<% @discount_code_effects.each do |a| %>
		<tr>
			<td class="hidden-xs"><%= a.id %></td>
			<td><%= a.name %></td>
			<td><%= link_to a.discount_code_id, discount_code_path(a.discount_code_id) %></td>
			<td><%= a.amount %></td>
			<td><%= a.percent %></td>
			<td><%= a.shipping %></td>
			<td><%= a.quantity %></td>
			<td class="hidden-xs"><%= a.item.try(:name) %></td>
			<td class="hidden-xs"><%= a.appliable.try(:name) %></td>
			<td class="text-center">
			
				<div class="dropdown">
					<button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
						<li><%= link_to("View", discount_code_effect_path(a.id))  %></li>
						<li><%= link_to("Edit", edit_discount_code_effect_path(a.id), :remote => true)  %></li>
						<li><%= link_to("Delete", discount_code_effect_path(a.id), :method => "delete", :remote => true)  %></li>
					</ul>
				</div>
			
			</td>
		</tr>
		<% end %>

	</table>
	
	<%= will_paginate @discount_code_effects, renderer: BootstrapPagination::Rails %>
	
	<%= link_to new_discount_code_effect_path, :class => "btn btn-default pull-right", :remote => true do %><span class="glyphicon glyphicon-plus"></span><% end %>
	
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div>