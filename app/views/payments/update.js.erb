<% unless flash[:error] %>
	$('#myModal').modal("hide")
	$('body').removeClass('modal-open')
	$('.modal-backdrop').remove()
  $("tr[data-payment-id='<%= @payment.id %>'").replaceWith("<%= j render :partial => 'payments/payment', :format => 'html', :locals => {:payment => @payment} %>")
  $("tr[data-payment-id-order='<%= @payment.id %>'").replaceWith("<%= j render :partial => 'orders/payment', :format => 'html', :locals => {:payment => @payment} %>")
<% end %>