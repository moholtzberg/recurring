<%= form_for subscription, :url => my_account_subscriptions_path, remote: true, :html => {:class => "form-horizontal"} do |f| %>
	<fieldset>	

		<div id="quantity" class="col-md-6">
			<%= f.label :quantity, class: "control-label" %>
			<%= f.text_field :quantity, class: "form-control" %>
		</div>

		<div id="frequency" class="col-md-6">
			<%= f.label :frequency, class: "control-label" %>
			<%= f.select :frequency, (1..6).to_a.map{|i| [pluralize(i, 'month'), i]}, {}, {class: "form-control"} %>
		</div>
		
		<%= f.hidden_field :item_id %>	
		<%= f.hidden_field :account_id %>	
		
	</fieldset>
<% end %>