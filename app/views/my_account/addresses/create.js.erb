<% if flash[:error] %>
  $("#modal-content").html("<%= j render :template => 'my_account/addresses/new.html', :format => 'html' %>")
<% else %>
  $('#myModal').modal("hide")
  $('body').removeClass('modal-open')
  $('.modal-backdrop').remove()
  $(".addresses").replaceWith("<%= j render :partial => 'shop/addresses', :format => 'html', :locals => {:account => @account} %>")
<% end %>