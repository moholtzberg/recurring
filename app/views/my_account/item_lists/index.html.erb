<% content_for :title do %>Item Lists<% end %>

<div class="page-header">
  <h1>Item Lists</h1>
</div>

<div class="row col-md-12">
  <table id="item_lists" class="table table-bordered table-condensed table-striped">

    <tr>
      <td colspan="3"><%= link_to "Add Item List", new_my_account_item_list_path(item_list: {}), class: "btn btn-primary btn-block btn-xs", remote: true %>
    </tr>

    <tr>
      <th>Name</th>
      <th>Items</th>
      <th>Remove</th>
    </tr>
    
    <%= render partial: 'item_list', collection: @item_lists %>
  </table>
</div>