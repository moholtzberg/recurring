<tr data-item-list-id="<%= credit_card.id %>">
  <td><%= credit_card.card_type %></td>
  <td><%= credit_card.cardholder_name %></td>
  <td><%= credit_card.expiration %></td>
  <td><%= credit_card.last_4 %></td>
  <td class="text-center">
    <div class="dropdown">
      <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
        <li><%= link_to("Edit", edit_my_account_credit_card_path(credit_card), :remote => true)  %></li>
        <li><%= link_to("Delete", my_account_credit_card_path(credit_card), :method => "delete", :remote => true)  %></li>
      </ul>
    </div>
  </td>
</tr>