<% if current_user.user_accounts.any? %>	
	
	<table class="table table-bordered">
		<tr>
			<th colspan="3">Managed Accounts</th>
		</tr>
		<% current_user.user_accounts.each do |ac|%>
		<tr>
			<% if current_user.account %><td><%= ac.account.name %></td><% end %>
			<td><%= ac.account.email %></td>
			<td><%= link_to "View Account", "my_account/#{ac.account.id}" %></td>
		</tr>
		<% end %>
	</table>
	
<% else %>
 	
	<table class="table table-bordered">
		<tr>
			<th colspan="3">Managed Accounts</th>
		</tr>
		<%# current_user.account do |ac|%>
		<tr>
			<td><%= current_user.account.name %></td>
			<td><%= current_user.email %></td>
			<td><%= link_to "View Account", "my_account/#{current_user.account.id}" %></td>
		</tr>
		<%# end %>
	</table>
	
<% end %>
