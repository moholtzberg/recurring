<% if params[:account_id] %>
	
	<% unless @account.nil? %>
		<table class="table table-bordered">
			<tr>
				<th colspan="8">Addresses</th>
			</tr>
			<tr>
				<th>Address 1</th>
				<th>Address 2</th>
				<th>City</th>
				<th>State</th>
				<th>Zip</th>
				<th>Phone</th>
				<th>Main</th>
			</tr>
		
			<% @account.addresses.each do |addr|%>
				<tr>
					<td><%= addr.address_1 %></td>
					<td><%= addr.address_2 %></td>
					<td><%= addr.city %></td>
					<td><%= addr.state %></td>
					<td><%= addr.zip %></td>
					<td><%= addr.phone %></td>
					<td><%= addr.main %></td>
				</tr>
			<% end %>

			<tr>
				<td colspan="8"><%= link_to "View Item History", "/my_account/items", :class => "btn btn-primary" %></td>
			</tr>
		
		<table>
	<% end %>

	<table class="table table-bordered">
		<tr>
			<th colspan="8">Recent Orders</th>
		</tr>
		<tr>
			<th>Number</th>
			<th>Order Date</th>
			<th>PO Number</th>
			<th>Order Total</th>
			<th>Paid</th>
			<th>Balance Due</th>
			<th>Due Date</th>
			<th>&nbsp;</th>
		</tr>
	
		<% @orders.each do |order|%>
		<tr>
			<td><%= order.number %></td>
			<td><%= order.completed_at.strftime("%m/%d/%Y") %></td>
			<td><%= order.po_number %></td>
			<td><%= number_to_currency(order.total) %></td>
			<td><%= order.paid ? "Yes" : "No" %></td>
			<td><%= number_to_currency(order.balance_due) %></td>
			<td><%= order.due_on.strftime("%m/%d/%Y") %></td>
			<td class="text-center">
				<%= link_to "/my_account/order/#{order.number}" , :class => "btn btn-primary btn-xs text-left" do %><i class="fa fa-shopping-cart"></i> ORDER<% end %>
				<% if order.fulfilled %>
					<%= link_to "/my_account/invoice/#{order.number}", :class => "btn btn-success btn-xs text-left" do %><i class="fa fa-file-o"></i> INVOICE<% end %>
				<% end %>
			</td>
		</tr>
		<% end %>
		
		<tr>
			<td class="text-center" colspan="8"><%= will_paginate @orders, renderer: BootstrapPagination::Rails %></td>
		</tr>
	
	<table>
		
<% end %>