<fieldset>	
			
	<div id="name" class="col-md-12">
		<%= f.label :name, :class => "control-label" %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	
	<div id="address" class="col-md-12">
		<%= f.label :address, :class => "control-label" %>
		<%= f.text_field :address_1, :class => "form-control" %>
	</div>
	
	<div id="address_2" class="col-md-12">
		<%= f.label :address_2, :class => "control-label" %>
		<%= f.text_field :address_2, :class => "form-control" %>
	</div>
	
	<div id="city" class="col-sm-6 col-xs-6">
		<%= f.label :city, :class => "control-label" %>
		<%= f.text_field :city, :class => "form-control" %>
	</div>
	
	<div id="state" class="col-sm-2 col-xs-3">
		<%= f.label :state, :class => "control-label" %>
		<%= f.text_field :state, :class => "form-control" %>
	</div>
	
	<div id="zip" class="col-sm-4 col-xs-3">
		<%= f.label :zip, :class => "control-label" %>
		<%= f.text_field :zip, :class => "form-control" %>
	</div>
	
	<div id="phone" class="col-xs-6">
		<%= f.label :phone, :class => "control-label" %>
		<%= f.text_field :phone, :class => "form-control" %>
	</div>
	
	<div id="fax" class="col-xs-6">
		<%= f.label :fax, :class => "control-label" %>
		<%= f.text_field :fax, :class => "form-control" %>
	</div>
	
	<div id="fax" class="col-xs-12">
		<%= f.label :email, :class => "control-label" %>
		<%= f.text_field :email, :class => "form-control" %>
	</div>
	
	<div id="group" class="col-xs-12">
		<%= f.label :group_name, :class => "control-label" %>
		<%= f.text_field :group_name, :class => "form-control", data: {autocomplete_source: groups_path} %>
	</div>
	
	<script>
	jQuery(function() {
		return $('#account_group_name').autocomplete({
			source: $('#account_group_name').data('autocomplete-source')
		})
	});
	</script>
	
	<div id="credit_limit" class="col-xs-6">
		<%= f.label :credit_limit, :class => "control-label" %>
		<%= f.text_field :credit_limit, :class => "form-control" %>
	</div>
	
	<div id="credit_terms" class="col-xs-6">
		<%= f.label :credit_terms, :class => "control-label" %>
		<%= f.text_field :credit_terms, :class => "form-control" %>
	</div>
	
</fieldset>