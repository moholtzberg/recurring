<%= form_for(resource, as: resource_name, :url => user_session_path) do |f| %>
	<fieldset id="password-credentials">
		
		<div class="form-group">
			
			<%= f.email_field :email, :class => 'form-control', :tabindex => 1, :placeholder => I18n.t(:email) %>
		</div>
		
		<div class="form-group">
			<%= f.password_field :password, :class => 'form-control', :tabindex => 2, :placeholder => I18n.t(:password) %>
		</div>
		
		<div class="checkbox">
			<label>
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me, I18n.t(:remember_me) %>
			</label>
		</div>
		
		<div class="form-group">
			<%= f.submit I18n.t(:login), :class => 'btn btn-lg btn-success btn-block', :tabindex => 3 %>
		</div>
		
	</fieldset>
<% end %>