<% @body_id = 'signup' %>
<%= devise_error_messages! %>
<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= I18n.t(:new_user) %></h3>
		</div>
		<div id="new-user" class="panel-body" data-hook="login">
			<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
			<div data-hook="signup_inside_form">
				<%= render :partial => 'user_form', :locals => { :f => f } %>
				
				<fieldset>
					<legend>Account Info</legend>
				<%= fields_for :account, resource.account do |a| %>
					<%= render :partial => 'customer_form', :locals => { :f => a } %>
				<% end %>
				</fieldset>
				<%= flash[:recaptcha_error] %>
				<%= recaptcha_tags %>
				
				<p><%= f.submit I18n.t(:create), :class => 'btn btn-lg btn-success btn-block' %></p>
			</div>
			<% end %>
			<div class="text-center">
				<%= I18n.t(:or) %> 
				<%= link_to I18n.t(:login_as_existing), user_session_path %>
			</div>
		</div>
	</div>
</div>
