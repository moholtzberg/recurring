<% content_for :app_location do %>Admin / Settings / Index<% end %>
<div id="settings" class="col-md-12">

	<table class="table table-bordered table-condensed table-responsive">

		<tr>
			<th class="hidden-xs">ID</th>
			<th>Key</th>
			<th>Value</th>
			<th class="hidden-xs">Description</th>
			<th>&nbsp;</th>
		</tr>
		
		<% @settings.each do |a| %>
		<tr>
			<td class="hidden-xs"><%= a.id %></td>
			<td><%= a.key %></td>
			<td><%= a.value %></td>
			<td class="hidden-xs"><%= a.description %></td>
			<td class="text-center">
			
				<div class="dropdown">
					<button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
						<li><%= link_to("Add", new_setting_path(a.id), :remote => true)  %></li>
						<li><%= link_to("Edit", edit_setting_path(a.id), :remote => true)  %></li>
					</ul>
				</div>
			
			</td>
		</tr>
		<% end %>

	</table>
	
	<%= link_to new_setting_path, :class => "btn btn-default pull-right", :remote => true do %><span class="glyphicon glyphicon-plus"></span><% end %>
	
	<table class="table">
		<tr>
			<td>Run Jobs</td>
			<td><%= SECRET["RUN_JOBS"] %></td>
		</tr>
	</table>
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div>